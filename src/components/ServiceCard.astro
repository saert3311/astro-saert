---
import Dots from "@/components/icons/Dots.astro"
---
<div class="relative group rounded px-8 py-12 hover:bg-primary border shadow bg-gray-800 border-gray-700 hover:scale-105 hover:bg-white/10 transition">
    <div class="mx-auto h-24 w-24 text-center xl:h-28 xl:w-28">
        <div>
            <slot name="image" />
        </div>
    </div>
    <div class="text-center">
        <h3
                class="pt-8 text-lg font-semibold uppercase text-primary group-hover:text-yellow lg:text-xl"
        >
            <slot />
        </h3>
        <p class="text-grey pt-4 text-sm group-hover:text-white md:text-base">
            <slot name="subtitle" />
        </p>
    </div>
    <div class="absolute bottom-1 left-1">
    <Dots />
    </div>
</div>